# Pidgin Configuration Example
# Copy to ~/.config/pidgin/pidgin.yaml or ./pidgin.yaml

# Event System Configuration
events:
  compression:
    enabled: true
    compress_on_completion: true
    compression_level: 9  # 1-9, higher = better compression, slower
  
  privacy:
    enabled: false  # Set to true for sensitive deployments
    remove_content: false  # Replace message content with [REDACTED]
    hash_models: false  # Replace model names with hashes
    redact_patterns: []  # List of strings to redact
    
  storage:
    version: 1  # Event schema version
    data_dir: "~/.pidgin_data/events"  # Where to store event files

# Conversation Settings
conversation:
  checkpoint:
    enabled: true
    auto_save_interval: 10  # Save every N turns
    
  attractor_detection:
    enabled: true
    check_interval: 5  # Check every N turns
    min_repetitions: 3
    similarity_threshold: 0.8
    
# Context Window Management
context_management:
  enabled: true
  warning_threshold: 80  # Warn at 80% usage
  auto_pause_threshold: 95  # Auto-pause at 95% usage
  show_usage: true

# Model Providers
providers:
  openai:
    api_key_env: "OPENAI_API_KEY"
    default_model: "gpt-4"
    
  anthropic:
    api_key_env: "ANTHROPIC_API_KEY" 
    default_model: "claude-3-sonnet-20240229"
    
  google:
    api_key_env: "GOOGLE_API_KEY"
    default_model: "gemini-pro"
    
  xai:
    api_key_env: "XAI_API_KEY"
    default_model: "grok-beta"

# Default Conversation Parameters
defaults:
  max_turns: 20
  manual_mode: false
  convergence_threshold: 0.75
  streaming_interrupts: true